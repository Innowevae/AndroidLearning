<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewGraph"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="5dp"
    android:elevation="20dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Dissolved Oxygen"
            android:textColor="#5D5D5D"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMinhead"
            />
        <ProgressBar
            android:id="@+id/tvProgressBar"
            style="@style/CircularDeterminateProgressBar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circular_shape"
            android:layout_marginBottom="55dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toTopOf="@id/tvGraph"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvProgressText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvProgressBar"
            app:layout_constraintEnd_toEndOf="@+id/tvProgressBar"
            app:layout_constraintStart_toStartOf="@id/tvProgressBar"
            app:layout_constraintTop_toTopOf="@id/tvProgressBar"
            />
        <TextView
            android:id="@+id/tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mg/L"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvProgressBar"
            app:layout_constraintEnd_toEndOf="@+id/tvProgressBar"
            app:layout_constraintStart_toStartOf="@+id/tvProgressBar"
            app:layout_constraintTop_toBottomOf="@id/tvProgressText"
            />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="date"
            android:textStyle="bold"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvProgressBar"
            app:layout_constraintStart_toStartOf="@id/tvProgressBar"
            app:layout_constraintEnd_toEndOf="@+id/tvProgressBar"
            app:layout_constraintBottom_toTopOf="@id/tvTime" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="time"
            android:padding="2dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintStart_toStartOf="@id/tvProgressBar"
            app:layout_constraintEnd_toEndOf="@+id/tvProgressBar"

            />

        <TextView
            android:id="@+id/tvMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="0.0"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/tvMinhead"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMinDate"
            />
        <TextView
            android:id="@+id/tvMinUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mg/dl"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvMinhead"
            app:layout_constraintStart_toEndOf="@id/tvMin"
            app:layout_constraintBottom_toTopOf="@id/tvMinDate"
            />
        <TextView
            android:id="@+id/tvMinDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="date"
            android:textStyle="bold"
            android:padding="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvMin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMaxhead" />
        <TextView
            android:id="@+id/tvMinTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="time"
            android:padding="2dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvMin"
            app:layout_constraintStart_toEndOf="@id/tvMinDate"
            app:layout_constraintBottom_toTopOf="@id/tvMaxhead"
            />
        <TextView
            android:id="@+id/tvMinhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Minimum "
            android:textColor="#808080"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvHead"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMin"
            />
        <TextView
            android:id="@+id/tvMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="0.0"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/tvMaxhead"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMaxDate"
            />
        <TextView
            android:id="@+id/tvMaxUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mg/dl"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvMaxhead"
            app:layout_constraintStart_toEndOf="@id/tvMax"
            app:layout_constraintBottom_toTopOf="@id/tvMaxDate"
            />
        <TextView
            android:id="@+id/tvMaxDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textStyle="bold"
            android:background="@drawable/textview_border"
            android:layout_marginStart="15dp"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvMax"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvGraph"
            />
        <TextView
            android:id="@+id/tvMaxTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textStyle="bold"
            android:background="@drawable/textview_border"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvMax"
            app:layout_constraintStart_toEndOf="@id/tvMaxDate"
            app:layout_constraintBottom_toTopOf="@id/tvGraph"
            />
        <TextView
            android:id="@+id/tvMaxhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Maximum "
            android:textColor="#808080"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvMinDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMax"
            />
        <com.jjoe64.graphview.GraphView
            android:id="@+id/tvGraph"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvMaxDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>